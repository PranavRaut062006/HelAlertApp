<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <EditText
        android:id="@+id/edit_months"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter servicing interval (months)"
        android:inputType="number"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btn_save_servicing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Servicing Interval"
        android:padding="12dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textViewInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No servicing interval set."
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>


</LinearLayout>